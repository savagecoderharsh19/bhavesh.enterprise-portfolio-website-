# Environment Variables Template
# Copy this file to .env.local and fill in your values

# ======================
# DATABASE (Supabase)
# ======================
# Get from Supabase Dashboard > Settings > Database > Connection String
# Connection string for application use (with connection pooling via pgbouncer)
DATABASE_URL="postgresql://postgres:[PASSWORD]@db.[PROJECT_REF].supabase.co:6543/postgres?pgbouncer=true"
# Direct connection string for Prisma migrations or other operations bypassing the pool
DIRECT_URL="postgresql://postgres:[PASSWORD]@db.[PROJECT_REF].supabase.co:5432/postgres"

# ======================
# SUPABASE API
# ======================
# Get from Supabase Dashboard > Settings > API
NEXT_PUBLIC_SUPABASE_URL="https://[YOUR-PROJECT-REF].supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="your-anon-key"

# ======================
# AUTHENTICATION
# ======================
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET="generate-a-secure-secret"

# Your production URL (no trailing slash)
NEXTAUTH_URL="http://localhost:3000"

# ======================
# ADMIN SETUP
# ======================
# Password for seeding the default admin user
ADMIN_PASSWORD="set-a-secure-password"

# ======================
# SUPABASE STORAGE (Required for File Uploads)
# ======================
# Service Role Key for server-side storage operations
# Get from Supabase Dashboard > Settings > API > service_role (secret)
# NOTE: Keep this secret! Never expose in client-side code
SUPABASE_SERVICE_ROLE_KEY="your-service-role-key"
